/* pages/canteenDetail/canteenDetail.wxss */
page{
  background-color: rgb(243,237,250);
  height:100%;
}
.intro{
  height:25%;

  border-radius: 0 0 16px 16px;
  padding-bottom: 10px;
  background-color: white;
}
.intro image{
width: 100%;
height:120px;
}
.cat_name{
  font-size: 40rpx;
  font-weight: bolder;
  padding: 3px 15px;
}
.cat_loc{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 10px;
  padding-top: 5px;
  font-size: 28rpx;
  color: #555555;
}
.cat_loc image{
  width:20px;
  height: 20px;
  margin-right: 5px;
}
.cates{
    position: absolute;
    width:100%;
    top:25%;
    bottom:0px;
    display: flex;
    flex-direction:row;


  }
  .cates .left{
    flex:1;
    width: 100%;
    height:100%;
    display: flex;
    flex-direction:column;
    font-weight: bolder;
    color: #3e1844;
    bottom:0;
    align-items: center;
    padding:8px 0;
  }
  .floor{
    width:90%;
    padding:15px 0;
    margin-bottom: 5px;
    margin-left: 5px;
    margin-right: 5px;
    font-size: 32rpx;
    text-align: center;
    background-color: white;
    border-radius: 12px;
  }
  .floorend{
    width:90%;
    flex:auto;
    padding:15px 0;
    margin-left: 2px;
    margin-right: 2px;
    font-size: 32rpx;
    text-align: center;
    background-color: white;
    border-radius: 12px;
  }
  .cates .right{
    flex:3;
    bottom:0;
    margin-top: 3px;
  }
  
  