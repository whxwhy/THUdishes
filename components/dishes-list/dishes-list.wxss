/* components/dishes-list/dishes-list.wxss */

.content{
  margin: 0 5px 5px 5px;
  background:white;
  display: flex;
  padding:15rpx;

  flex-direction: row;
  border-radius: 16px;
  overflow: hidden;
}
.errpic{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:15px;
}
.errpic image{
  height:32px;
  width:32px;
}
.dish_img{

  min-width: 200rpx;
  min-height: 200rpx;
  margin-left: 2px;
  
  }
.dish_img_img{
flex:1;
width: 200rpx;
height: 200rpx;
border-radius: 16px;
margin-left: 2px;

}
.dish_info{
  flex:1;
  padding-left: 20rpx;
}
.dish_info .dish_name{
  font-size: 36rpx;
  color:black;
  margin-bottom: 10rpx;
}
.dish-detail{
  display: flex;
  position:absolute;
  bottom:10rpx;
}
.dish_detail .dish_loc{
  color:#666666;
  font-size: 28rpx;
}
.dish_detail .dish_price{
  color:#660874;
  font-size: 40rpx;
  padding-top:35rpx;
  float: right;
  margin-right:25rpx;
}