/* components/windows-list/windows-list.wxss */
.window{
    background-color: white;
    padding-bottom: 3px;
    border-radius: 16px;
    margin: 5px 0;

}
.window_info{
  display: flex;
 align-items: center;
  padding-top: 10px;
}
.window_name{
  font-size: 34rpx;
  font-weight: normal;
  color:black;
 padding-left: 15px;
 padding-right: 3px;
}
.window_type{
  background-color:rgb(154,107,203);
  color: white;
  font-weight: 340;
  font-size: 24rpx;
  text-align: center;
 line-height: 18px;
  width:18px;
  height:18px;
  border-radius: 30%;
  margin:0 2px;
}
.window_loc{
color:#555555;
font-size: 28rpx;
margin-left: auto;
padding-right: 10px;
}
.dish{
  display:flex;
  flex-direction: column; 
  padding: 5px 10px;
  flex-wrap: wrap;
  height:100px;
}
.dishitem{
  height:33.33%;
  width:max-content;
  display: flex;
  align-items: center;
}
.dot{
  color:#3e1844;
  font-size: 32rpx;
  padding-right:4px;
  font-weight: border;
}
.price{
  font-size: 20rpx;
  color: #3e1844;
  float: right;
}
